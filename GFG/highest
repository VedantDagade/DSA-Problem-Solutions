class Solution {
public:
    int mostFrequentElement(vector<int>& nums) {
      int maxFreq = 0;
      int maxEle ;
      
      int n = nums.size();

      unordered_map<int,int>mpp;   

      for(int i=0; i<n; i++){
         mpp[nums[i]]++;
      }

      for(auto it : mpp){
         int ele = it.first;               //key
          int freq = it.second;           //value

         if(freq > maxFreq){
            maxFreq = freq;
            maxEle = ele;
         }else if (freq == maxFreq){
            maxEle = min(maxEle , ele); //If ele is smaller than maxEle, it updates maxEle with the smaller value.
         }
      }

      return maxEle;
   }
};
