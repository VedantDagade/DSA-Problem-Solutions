class Solution {
public:
    int longestConsecutive(vector<int>& nums) {
        int n = nums.size();

        if(n == 0) return 0;

        unordered_set<int> s;

        for(int i = 0; i < n; i++){
            s.insert(nums[i]);
        }

        int longest = 0;
        
        for(auto it : s){

            if(s.find(it-1) == s.end()){     //if num-1 find in set then break loop.not going inside
                int cnt = 1;
                int x = it;

                while(s.find(x+1) != s.end()){     //if found
                  cnt += 1;
                  x = x + 1;
                }

                longest = max(longest , cnt);
            }
           
        }

        return longest;
    }
};
