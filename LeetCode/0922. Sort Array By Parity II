class Solution {
public:
    vector<int> sortArrayByParityII(vector<int>& nums) {
        int n = nums.size();
        int evenIndex = 0 , oddIndex = 1;

        vector<int> ans(n,0);

        for(int i = 0; i < n; i++){

            if(nums[i] % 2 != 0){
                ans[oddIndex] = nums[i];
                oddIndex += 2;
            }else{
                ans[evenIndex] = nums[i];
                evenIndex += 2;
            }

        }

        return ans;
    }
};
